@model PushToPlay.WEB.Models.UserRegisterViewModel

@{
    ViewBag.Title = string.Concat("Push To Play - Cadastre-se!");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 0px auto 0px auto; width: 40%;">
    <div style="padding: 10px; float: left;">
        <div style="padding-left: 10px; padding-top: 5px; padding-right: 10px; padding-bottom:10px; width:350px;" class="displayAreaColor">
            <h3 class="fieldText">Junte-se!</h3>
            <div class="contentColor" style="height: 1px; margin-right: -10px; margin-left: -10px;"></div>
            @using (@Html.BeginForm())
            {
                if (Model != null && !string.IsNullOrWhiteSpace(Model.ModelErrorMsg))
                {
                <div>
                    <span class="errorTextStrong">@Model.ModelErrorMsg</span>
                </div>
                    Model.ModelErrorMsg = string.Empty;
                }
                
                <div class="controlSeparator">
                    <div>
                        @Html.LabelFor(m => m.UserName, new { @class = "fieldTextStrong" })
                    </div>
                    <div class="controlSeparator">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "normalTextBox caixatexto" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "errorTextStrong" })
                    </div>
                </div>
                
                <div class="marginTop10">
                    <div>
                        @Html.LabelFor(m => m.Password, new { @class = "fieldTextStrong" })
                    </div>
                    <div class="controlSeparator">
                        @Html.PasswordFor(m => m.Password, new { @class = "normalTextBox caixatexto" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "errorTextStrong" })
                    </div>
                </div>
                
                <div class="marginTop10">
                    <div>
                        @Html.LabelFor(m => m.RePassword, new { @class = "fieldTextStrong" })
                    </div>
                    <div class="controlSeparator">
                        @Html.PasswordFor(m => m.RePassword, new { @class = "normalTextBox caixatexto" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(m => m.RePassword, "", new { @class = "errorTextStrong" })
                    </div>
                </div>
                
                <div class="marginTop10">
                    <div>
                        @Html.LabelFor(m => m.Email, new { @class = "fieldTextStrong" })
                    </div>
                    <div class="controlSeparator">
                        @Html.TextBoxFor(m => m.Email, new { @class = "normalTextBox caixatexto", @style="width:345px;" })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "errorTextStrong" })
                    </div>
                </div>
                <div class="marginTop10 fieldTextStrong">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                <div class="marginTop10" style="text-align:right">
                    <button type="submit" class="buttonOkNoMargin">Start!</button>
                </div>                
            }
        </div>
    </div>
</div>


